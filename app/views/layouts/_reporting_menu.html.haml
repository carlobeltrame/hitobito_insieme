%ul.nav.nav-list.cost-accounting-menu
  %li.nav-header= t('.time_records')
  = reporting_nav t('.base_informations'), time_record_group_path(group, year: year)
  - [TimeRecord::EmployeeTime, TimeRecord::VolunteerWithoutVerificationTime, TimeRecord::VolunteerWithVerificationTime].each do |report|
    = reporting_nav t("activerecord.models.#{report.model_name.i18n_key}.menu"), edit_time_record_report_group_path(group, year, report.key)

  %li.nav-header= t('.course_statistics')
  = reporting_nav t('.general_cost_allocation'),
                  edit_general_cost_allocation_group_events_path(group, year)
  = reporting_nav t('course_reporting.aggregations.index.title'),
                  aggregations_group_path(group, year)

  %li.nav-header= t('.cost_accounting')
  = reporting_nav t('.overview'), cost_accounting_group_path(group, year: year)

  - cost_accounting_reports.each do |report|
    - if report.editable?
      = reporting_nav h(report.short_name),
                      edit_cost_accounting_report_group_path(group, year, report.key),
                      title: h(report.human_name)

  %li.nav-header= t('.capital_substrate')
  = reporting_nav t('.capital_substrate'), edit_capital_substrate_group_path(group, year)
