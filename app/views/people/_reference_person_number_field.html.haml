.span3= entry.reference_person_number

- if entry.reference_person.present?
  .span9
    %section.roles
      = link_to entry.reference_person.full_name, entry.reference_person

      - if can?(:show_details, entry.reference_person) && entry.reference_person.grouped_active_membership_roles.present?
        %table.table.table-basic
          %tbody
            - entry.reference_person.grouped_active_membership_roles.each do |group, roles|
              %tr
                %td
                  - if can?(:primary_group, entry.reference_person)
                    = icon(entry.reference_person.primary_group_id == group.id ? 'star' : 'star-empty')
                %td
                  %strong= GroupDecorator.new(group).link_with_layer
                  %br/
                  %table.roles
                    %tbody
                      - roles.each_with_index do |role, index|
                        %tr
                          %td
                            %strong
                              = role.to_s
