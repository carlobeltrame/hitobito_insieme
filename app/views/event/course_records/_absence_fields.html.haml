= field_set_tag(entry.absence_caption) do
  = f.labeled_input_field :absenzen_behinderte,
                          addon: entry.duration_unit,
                          label: entry.class.human_attribute_name(:teilnehmende_behinderte)
  = f.labeled_input_field :absenzen_angehoerige,
                          addon: entry.duration_unit,
                          label: entry.class.human_attribute_name(:teilnehmende_angehoerige)
  = f.labeled_input_field :absenzen_weitere,
                          addon: entry.duration_unit,
                          label: entry.class.human_attribute_name(:teilnehmende_weitere)

  = f.labeled_readonly_value :total_absenzen,
                             label: entry.class.human_attribute_name(:total)
  = f.labeled_readonly_value :presence_participants, value: format_percent(entry.praesenz_prozent)
